<Window x:Class="RoTwee.NewTweetInputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="コメントを入力" Height="142" Width="300" ResizeMode="NoResize">
    <Grid>
        <TextBox Margin="12,12,8,37" Name="_tb_NewTweetInput" MaxLength="140" TextWrapping="Wrap" AcceptsReturn="False" AcceptsTab="False" />
        <Button Height="23" Margin="114,0,89,8" Name="_btn_done" VerticalAlignment="Bottom" Click="_btn_done_Click">書き込む</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,8,8" Name="_btn_cancel" VerticalAlignment="Bottom" Width="75" Click="_btn_cancel_Click">キャンセル</Button>
    </Grid>
</Window>
